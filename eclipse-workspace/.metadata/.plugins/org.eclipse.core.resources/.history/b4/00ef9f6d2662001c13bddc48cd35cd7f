package test1;

public class Switch59 {

	public static void main(String[] args) {
      int x=1;
       switch(x)  //1
       {
          case 0 :
             boolean b = false;// b is in scope for the rest of the switch block.
             break;
     
          case 1 :
             b = true; //2
             System.out.println(b);
             break;
       }
       
      // if(b) System.out.println(args[2]);
   }
}
