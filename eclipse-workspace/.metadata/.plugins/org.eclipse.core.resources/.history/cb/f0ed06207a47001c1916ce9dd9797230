package flowcontrol;

public class SwitchBody {

	 public static void main(String[] args) {
		 
		 char a;

	        // first loop, ++a
	        for (a=0;a<5;a++){
	            switch(++a){
	                case 0: System.out.println("A1"); break;
	                case 1: System.out.println("B1"); break;
	                case 2: System.out.println("C1"); break;
	                case 3: System.out.println("D1"); break;
	                case 4: System.out.println("E1"); break;
	            }
	        }


	        // switch statement must have a body, although that body can be empty or effectively empty

	        switch (8) {
	        }

	        switch (6) {
	            default:
	        }

	        switch (5) {
	            case 4:
	        }

//	        switch (2) ;                  // does not compile

//	        switch (3) {break;}           // does not compile


	    }

}
